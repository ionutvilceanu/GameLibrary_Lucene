<script src="/js/jquery.mb.YTPlayer.min.js"></script>


<script src="/js/main.js"></script>

<script>
        $(function() {
        $('#delivery').change(function(){
            $('.colors').hide();
            $('#' + $(this).val()).show();
        });
    });
</script>
<script>
    $(function () {
        $('#payment').change(function () {
            $('.colors').hide();
            $('#' + $(this).val()).show();
        });
    });
</script>