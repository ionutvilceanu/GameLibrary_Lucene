@model IEnumerable<GameLibrary.Models.Recommend>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Index";
}

<h1>Multumim!</h1>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
{

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItiPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dislike)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItiPlace)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dislike)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RecommendId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RecommendId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RecommendId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}